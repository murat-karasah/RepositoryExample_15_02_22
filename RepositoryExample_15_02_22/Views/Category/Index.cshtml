@model RepositoryExample_15_02_22.Models.CategoriesModel
@{
    ViewBag.Title = "Index";
}
<div>
    <form method="post" action="/Category/Index" class="d-inline-flex">
        <input type="search" name="name" class="form-control" placeholder="Arama..." />
        <button class="btn btn-success " type="submit">Ara</button>
    </form>
</div>
<hr />
<a class="btn btn-info float-right" href="/Category/Ekle">Ekle</a>
<div class="container">
    <div class="row">
        <table class="table table-striped table-bordered table-hover">
           <thead>
               <tr>
                   <th>@Html.DisplayNameFor(x => x.Categories.CategoryID)</th>
                   <th>@Html.DisplayNameFor(x => x.Categories.CategoryName)</th>
                   <th>@Html.DisplayNameFor(x => x.Categories.Description)</th>
                   <th>Detay</th>

               </tr>
           </thead>
            <tbody>
                @foreach(var item in Model.cList)
                {
                <tr>
                    <td>@item.CategoryID</td>
                    <td>@item.CategoryName</td>
                    <td>@item.Description</td>
                    <td class="text-center"><a href="/Category/Detay/@item.CategoryID">Detay</a></td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>